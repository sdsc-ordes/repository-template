{% include ".jinja/common/justfile" %}
{% raw %}
# Lint the project.
lint *args:
    ruff check

# Build the project.
build *args:
    uv build --out-dir "{{build_dir}}" "$@"

# Test the project.
test *args:
   uv run -m pytest .

# Run an executable.
run *args:
    uv run cli "$@"

# Run the Jupyter notebook.
notebook *args:
    uv run python -m notebook "$@"
{%- endraw %}
